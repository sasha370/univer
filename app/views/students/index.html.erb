<div class="row">
  <div class="col s12 ">
    <h3 class="center-align"> Список студентов </h3>


    <div class="row">
      <% @students.each do |student| %>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Студент: <%= student.name %></span>
              <span class="">Email: <%= student.email %></span>
              <p> Кол-во курсов: <%= student.courses.count %>  </p>
            </div>
            <div class="card-action">
              <%= link_to "Профиль", student_path(student) %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

