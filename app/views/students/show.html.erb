<div class="row sign-up-form">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1 ">
      <div class="card-content white-text">
        <span class="card-title">Студент: <%= @student.name %></span>
        <span class="">Email: <%= @student.email %></span>
        <br />
        <p> Список курсов: </p>
        <% if @student.courses.empty? %>
          Пока нет курсов
        <% else %>
          <ul>
            <% @student.courses.each do |course| %>
               <li> - <%= course.name %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to '<i class="material-icons right">create</i> Редактировать профиль'.html_safe, edit_student_path, class: "waves-effect waves-light btn-large" %>
    <% end %>
  </div>
</div>