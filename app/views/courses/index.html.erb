<div class="row">
  <div class="col s12 ">
    <h3 class="center-align"> Список курсов</h3>


    <div class="row">
      <% @courses.each do |course| %>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
              <p><%= course.description %></p>
            </div>
            <div class="card-action">
              <!--            Показываем кнопку записаться только тем, кто зарегистрирован и еще не подписан на него-->
              <% if logged_in? && !(current_user.courses.include?(course)) %>
<!--                В ссылке нам надо передать ID курса, методом POST-->
                <%= link_to "Записаться", course_enroll_path(course_id: course.id), method: :post %>
              <% end %>


              <a href="#">Подробнее</a>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

