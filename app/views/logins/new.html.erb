<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header"> Войти </h3>


        <div class="row">
          <!--          Форма уже не для переменной @, а для котнроллера, поэтому :-->
          <%= form_for(:logins, html: { class: "col s12" }) do |f| %>

            <div class="row">
              <div class="input-field col s12">
                <%= f.email_field :email, placeholder: "Email", autofocus: true %>
                <%= f.label :email, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "password", autofocus: true %>
                <%= f.label :password, class: "active" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
               <%= f.button '<i class="material-icons right">arrow_forward </i> Войти'.html_safe, class: 'btn orange waves-effect waves-light right' %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>