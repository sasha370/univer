<!--Показываем ошибки-->
<% if obj.errors.any? %>
  <div class="container">
    <div class="row sign-up-form">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2">
          <span class="white-text">
          <strong> У вас есть <%= obj.errors.count %>  ошибка(и)</strong>
          <ul>
            <% obj.errors.full_messages.each do |message| %>
              <li> <%= message %></li>
            <% end %>
          </ul>
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>